{
  "name": "bookshelf_library_management",
  "version": "1.0.0",
  "description": "An app that performs CRUD operations on a bookshelf/library",
  "main": "./server.js",
  "scripts": {
    "start": "npm run apidoc && nodemon ./server.js --exec babel-node",
    "apidoc": "apidoc -i app/controllers/ -o public/apidoc",
    "test-coverage": "SET NODE_ENV=test && cross-env NODE_ENV=test && nyc --reporter=html --reporter=text-summary --check-coverage mocha --timeout 5000 test/**/*.js",
    "test": "SET NODE_ENV=test && cross-env NODE_ENV=test && mocha --timeout 5000 test/**/*.js"
  },
  "apidoc": {
    "name": "BookShelf Library Management API - Documentation",
    "template": {
      "forceLanguage": "en"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/XIXIS/bookshelf_library_management.git"
  },
  "author": "",
  "license": "MIT",
  "homepage": "https://github.com/XIXIS/bookshelf_library_management.git#readme",
  "dependencies": {
    "apidoc": "^0.17.7",
    "axios": "^0.18.0",
    "bcrypt": "^3.0.4",
    "body-parser": "^1.18.3",
    "compression": "^1.7.3",
    "consign": "^0.1.6",
    "cors": "^2.8.5",
    "dotenv": "^6.2.0",
    "ejs": "^2.6.1",
    "express": "^4.16.4",
    "express-validator": "^5.3.1",
    "helmet": "^3.15.1",
    "jsonwebtoken": "^8.5.0",
    "moment": "^2.24.0",
    "mongoose": "^5.4.15",
    "mongoose-paginate": "^5.0.3",
    "morgan": "^1.9.1",
    "nodemon": "^1.18.10",
    "request": "^2.88.0",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-plugin-istanbul": "^5.1.1",
    "babel-preset-env": "^1.7.0",
    "babel-register": "^6.26.0",
    "chai": "^4.2.0",
    "cross-env": "^5.2.0",
    "mocha": "^6.0.1",
    "nyc": "^13.3.0",
    "supertest": "^3.4.2"
  },
  "nyc": {
    "check-coverage": true,
    "per-file": true,
    "exclude": [
      "src/**/*.spec.js",
      "coverage/**",
      "public/**",
      "test/**"
    ],
    "ignore-class-method": "methodToIgnore",
    "reporter": [
      "text-summary",
      "lcov",
      "html"
    ],
    "watermarks": {
      "lines": [
        50,
        80
      ],
      "functions": [
        50,
        80
      ],
      "branches": [
        50,
        80
      ],
      "statements": [
        50,
        80
      ]
    },
    "extension": [
      ".jsx"
    ],
    "require": [
      "babel-register"
    ],
    "cache": true,
    "all": true,
    "sourceMap": false,
    "instrument": false
  }
}
